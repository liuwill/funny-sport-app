<!--index.wxml-->
<view class="container">
    <!-- 用户登录测试 -->
    <view class="userinfo">
        <image
            class="userinfo-avatar"
            src="./avatar.jpg"
            background-size="cover"
        ></image>
        <view>
            <text class="userinfo-nickname">调试接口</text>
        </view>
    </view>

    <!-- 上传图片测试 -->
    <view class="uploader">
        <view class="list-item" bindtap="visitUserInfo">
            <text>用户信息</text>
        </view>
    </view>

    <view class="uploader">
        <view class="list-item" bindtap="checkStep">
            <text>检查步数</text>
        </view>
    </view>

    <view class="uploader">
        <view class="list-item" bindtap="acceptStepAward">
            <text>领取计步积分</text>
        </view>
    </view>

    <view class="uploader">
        <navigator url="../goods/goods" open-type="navigate" class="uploader-text">
            <text>创建商品</text>
        </navigator>
    </view>
</view>
